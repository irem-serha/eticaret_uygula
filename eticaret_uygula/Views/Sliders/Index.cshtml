@model IEnumerable<eticaret_uygula.Models.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Slider</h1>

<p>
    <a asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SliderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Context)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SliderImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SliderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Header1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Header2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Context)
                </td>
                <td>
                    <img src="/Slider/@item.SliderImage" width="100px" height="100px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SliderId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.SliderId">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.SliderId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

